<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<h2>User info</h2>
<%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>

<h4>Name</h4>
<%= f.text_field :name %>

<h4>Image</h4>
<%= f.file_field :profile_image, accept: "image/*" %>

<h4>Introduction</h4>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' %>

<% end %>